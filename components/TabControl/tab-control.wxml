<!--components/TabControl/tab-control.wxml-->
<view class="tab-control">
  <block wx:for="{{title}}" wx:key="index">
    <view
      class="tab-item {{currentIndex === index ? 'active' : ''}}"
      bindtap="switchTabItem"
      data-index="{{index}}"
    >
    <text>{{item}}</text>
    </view>
  </block>
</view>